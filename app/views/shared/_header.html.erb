<header class="header<%= " header_toppage" if current_page?(root_path) %>">
  <nav class="navbar navbar-expand-lg<%= " navbar-dark" if current_page?(root_path) %>">
    <div class="container-fluid">
      <h1>
        <% if current_page?(root_path) %>
          <%= link_to image_tag("logo_w.png", alt: "飲み代番長"), root_path, class: "header_logo" %>
        <% else %>
          <%= link_to image_tag("logo.png", alt: "飲み代番長"), root_path, class: "header_logo" %>
        <% end %>
      </h1>
      <button class="navbar-toggler hamburger" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
        <% if user_signed_in? %>
          <div class="navbar-nav<%= " navbar-dark" if current_page?(root_path) %>">
            <%= link_to mypage_path, class: "nav-link text-end" do %>
              <i class="fa-solid fa-house me-2"></i>マイページ
            <% end %>
            <%= link_to users_account_path, class: "nav-link text-end ms-3" do %>
              <i class="fa-solid fa-circle-user me-2"></i>アカウント
            <% end %>
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link text-end ms-3" do %>
              <i class="fa-solid fa-arrow-right-from-bracket me-2"></i>ログアウト
            <% end %>
          </div>
        <% else %>  
          <div class="navbar-nav<%= " navbar-dark" if current_page?(root_path) %>">
            <%= link_to users_guest_sign_in_path, data: { turbo_method: :post }, class: "nav-link text-end" do %>
              <i class="fa-solid fa-person-walking-luggage me-2"></i>ゲストログイン
            <% end %>
            <%= link_to new_user_session_path, class: "nav-link text-end ms-3" do %>
              <i class="fa-solid fa-arrow-right-to-bracket me-2"></i>ログイン
            <% end %>
            <%= link_to new_user_registration_path, class: "nav-link text-end ms-3" do %>
              <i class="fa-solid fa-user-plus me-2"></i>新規登録
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>
