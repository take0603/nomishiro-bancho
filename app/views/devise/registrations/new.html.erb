<div class="container">
  <div class="userform_wrapper">
    <h2>ユーザー登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row mb-3">
        <%= f.label :name, class: "col-sm-4 col-form-label required" %>
        <div class="col-sm-8">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          <%= render "shared/error_messages", object: f.object, key: "name" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :email, class: "col-sm-4 col-form-label required" %>
        <div class="col-sm-8">
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          <%= render "shared/error_messages", object: f.object, key: "email" %>
        </div>
      </div>
      <div class="row mb-3">
        <%= f.label :password, class: "col-sm-4 col-form-label required" %><br>
        <div class="col-sm-8">
          <%= f.password_field :password, placeholder: "#{@minimum_password_length}文字以上", class: "form-control" %>
          <%= render "shared/error_messages", object: f.object, key: "password" %>
        </div>
      </div>
      <div class="row mb-5">
        <%= f.label :password_confirmation, class: "col-sm-4 col-form-label required" %>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, placeholder: "確認のため、再度入力してください", class: "form-control" %>
          <%= render "shared/error_messages", object: f.object, key: "password_confirmation" %>
        </div>
      </div>
      <%= f.submit "ユーザー登録", class: "user_button signup" %>
    <% end %>
    <hr class="user_hr">
    <%= link_to "ゲストとしてお試しログイン", users_guest_sign_in_path, data: {"turbo-method": :post}, class: "user_button guest_login" %>
  </div>
</div>
