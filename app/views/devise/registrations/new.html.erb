<div class="container">
  <h1>新規アカウント登録</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名を入力" %>
      <%= render "shared/error_messages", object: f.object, key: "name" %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレスを入力" %>
      <%= render "shared/error_messages", object: f.object, key: "email" %>
    </div>
    <div class="field">
      <%= f.label :password %>
        <%= "#{@minimum_password_length}文字以上" if @minimum_password_length %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力" %>
      <%= render "shared/error_messages", object: f.object, key: "password" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用パスワードを入力" %>
      <%= render "shared/error_messages", object: f.object, key: "password_confirmation" %>
    </div>
    <div class="actions">
      <%= f.submit "ユーザー登録" %>
    </div>
  <% end %>
</div>
