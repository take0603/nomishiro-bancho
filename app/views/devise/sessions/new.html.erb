<div class="container">
  <div class="userform_wrapper">
    <h2>ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row mb-3">
          <%= f.label :email, class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            <%= render "shared/error_messages", object: f.object, key: "email" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= f.label :password, class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="row mb-5">
            <div class="remember_me">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>
        <%= f.submit "ログイン", class: "user_button signup" %>
      <% end %>
    <hr class="user_hr">
    <%= link_to "ゲストとしてお試しログイン", users_guest_sign_in_path, data: {"turbo-method": :post}, class: "user_button guest_login" %>
  </div>
</div>
